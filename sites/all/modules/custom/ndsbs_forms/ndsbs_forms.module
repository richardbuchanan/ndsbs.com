<?php

/**
 * Implements hook_form_alter().
 */
function ndsbs_forms_form_alter(&$form, &$form_state, $form_id) {
  if ($form_id == 'resource_node_form') {
    $form['actions']['submit']['#submit'][] = 'ndsbs_forms_node_form_submit';
  }
}

function ndsbs_forms_node_form_submit($form, &$form_state) {
  // Clear the page and block caches.
  cache_clear_all();
}
