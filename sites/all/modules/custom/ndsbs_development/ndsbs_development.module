    'page callback' => 'node_page_default_clone',
    'access arguments' => array('access content'),
    'type' => MENU_CALLBACK,
  );

  $items['node_three'] = array(
    'page callback' => 'node_page_default_clone',
    'access arguments' => array('access content'),
    'type' => MENU_CALLBACK,
  );

  return $items;
}

